<Page x:Class="TriviaClient.Pages.TriviaCreateRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TriviaClient.Pages"
      mc:Ignorable="d" 
      Title="TriviaCreateRoom">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../images/background.png"/>
        </Grid.Background>


        <Button x:Name="Back" Style="{StaticResource MenuButtonStyle}" 
                Width="140"
                Height="60"
                FontSize="22"
                Background="#2e393a" Content="BACK"
                Click="BackClick" ClickMode="Press" 
                Panel.ZIndex="1" VerticalAlignment="Top"
                HorizontalAlignment="Left"
            />

        <Viewbox>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,300,0,100" >
                <Image Name ="img" Height="300" Margin="0,-300,0,0" Source="pack://application:,,,/images/main1.png"/>


                <TextBox Name="RoomNameTextBox"
             Style="{StaticResource TextBoxStyle}"
             FontSize="25"
             Background ="#e8644b"
             BorderBrush ="#e8644b"
             Foreground="{StaticResource ffe7b3Color}"
             Padding="20,20,20,20"
             GotFocus="RoomNameTextBox_GotFocus"
             Text="Room Name:"
             />

                <TextBox Name="NumberOfPlayersTextBox"
             Style="{StaticResource TextBoxStyle}"
             FontSize="25"
            Background ="#e8644b"
             BorderBrush ="#e8644b"
             Foreground="{StaticResource ffe7b3Color}"
             Padding="20,20,20,20"
             Margin="0,15"
             GotFocus="NumberOfPlayersTextBox_GotFocus"
             Text="Number Of Players:"
             />
                <TextBox Name="NumberOfQuestionsTextBox"
             Style="{StaticResource TextBoxStyle}"
             FontSize="25"
             Background ="#e8644b"
             BorderBrush ="#e8644b"
             Foreground="{StaticResource ffe7b3Color}"
             Padding="20,20,20,20"
             Margin="0,15"
             GotFocus="NumberOfQuestionsTextBox_GotFocus"
             Text="Number Of Questions:"
             />
                <TextBox Name="TimePerQuestionTextBox"
             Style="{StaticResource TextBoxStyle}"
             FontSize="25"
             Background ="#e8644b"
             BorderBrush ="#e8644b"
             Foreground="{StaticResource ffe7b3Color}"
             Padding="20,20,20,20"
             Margin="0,15"
             GotFocus="TimePerQuestionTextBox_GotFocus"
             Text="Time Per Question:"
             />

                <Button Name="CreateRoom" Style="{StaticResource MenuButtonStyle}" 
            Background="#e8644b" Content="CREATE ROOM"
            Click="CreateRoomClick" ClickMode="Press"/>
            </StackPanel>
        </Viewbox>
        
    </Grid>
</Page>
