<Page x:Class="TriviaClient.TriviaSignin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d" 
      d:DesignHeight="1417" d:DesignWidth="1890"
      Title="TriviaSignin">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../images/background.png"/>
        </Grid.Background>

        <Image Height="1300" Width="1300" Source="pack://application:,,,/images/main.png" Margin="295,-2,295,119"/>


        <Button x:Name="Back" Style="{StaticResource MenuButtonStyle}" 
                Width="250"
                Background="#2e393a" Content="BACK"
                Click="BackClick" ClickMode="Press" 
                Panel.ZIndex="1" Margin="-1520,-830,0,0"
            />
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Height="954" Width="1160" Margin="0,400,0,0" >

            <TextBox Name="UsernameTextBox"
                     Style="{StaticResource TextBoxStyle}"
                     FontSize="25"
                     Foreground="{StaticResource ffe7b3Color}"
                     Padding="20,20,20,20"
                     GotFocus="UsernameTextBox_GotFocus"
                     Text="Username:"
                     />

            <TextBox Name="PasswordTextBox"
                     Style="{StaticResource TextBoxStyle}"
                     FontSize="25"
                     Foreground="{StaticResource ffe7b3Color}"
                     Padding="20,20,20,20"
                     Margin="0,15"
                     GotFocus="PasswordTextBox_GotFocus"
                     Text="Password:"
                     />

            <Button Name="SignIn" Style="{StaticResource MenuButtonStyle}" 
                    Background="#3baaa3" Content="SIGN IN"
                    Click="SignInClick" ClickMode="Press"/>
            <TextBlock Name="ErrorBox" Style="{StaticResource ErrorButtonStyle}">
             
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>

