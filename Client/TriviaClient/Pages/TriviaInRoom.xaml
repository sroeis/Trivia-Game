<Page x:Class="TriviaClient.Pages.TriviaInRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TriviaClient.Pages"
      mc:Ignorable="d" 
      Title="TriviaInRoom">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../images/background.png"/>
        </Grid.Background>


        <Viewbox>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,300,0,120" >
                <Image Name ="img" Height="265" Margin="0,-330,0,0" Source="pack://application:,,,/images/main1.png"/>

                <Border CornerRadius="10" Background="#f29443" Margin="10,0,10,0">

                    <Border.Effect>
                        <DropShadowEffect 
                        Color="{Binding Background.Color, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource DarkerColorConverter}}"
                        ShadowDepth="8" Direction="-90" BlurRadius="0"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock x:Name="Connected"
                        Style="{StaticResource TextStyle}" Height="50" Width="566"/>

                        <TextBlock x:Name="Settings"
                        FontSize="26"
                        Style="{StaticResource TextStyle}" Height="50" Width="566"/>


                        <TextBlock Text="Current participants are:"
                        Style="{StaticResource TextStyle}" Height="50" Width="566"/>
                        
                        <ListBox x:Name="UsersListBox"
                        Width="500" Height="60"
                        Margin="0,0,0,30"
                        Background="#f29443"
                        FontSize="20" FontWeight="Bold"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <Button Name="CloseRoom" Style="{StaticResource MenuButtonStyle}" 
                Background="#f29443" Content="Close Room"
                Click="CloseRoomClick" ClickMode="Press"
                Visibility="Collapsed"/>
                <Button Name="StartGame" Style="{StaticResource MenuButtonStyle}" 
                Background="#f29443" Content="Start Game"
                Click="StartGameClick" ClickMode="Press"
                Visibility="Collapsed"/>
                <Button Name="LeaveRoom" Style="{StaticResource MenuButtonStyle}" 
                Background="#f29443" Content="Leave Room"
                Click="LeaveRoomClick" ClickMode="Press"
                Visibility="Collapsed"/>
            </StackPanel>

        </Viewbox>
    </Grid>
</Page>
